<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounder_corner"
    android:backgroundTint="#E4C565"
    android:paddingHorizontal="3dp"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/item_rec_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/isImportant_item"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>



    <TextView
        android:id="@+id/item_rec_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:paddingHorizontal="15dp"
        android:layout_gravity="bottom"
        android:paddingVertical="10dp"
        android:textColor="#3F51B5"
        android:text="hello day la chu de thu font"
        android:fontFamily="sans-serif-medium"
        />
    <RelativeLayout
        android:layout_below="@+id/item_rec_content"
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="date"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"

            />


        <ImageButton
            android:id="@+id/btn_showsubmenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_ellipsis"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#E4C565"
            android:textColor="@color/white"

            />

    </RelativeLayout>


</RelativeLayout>